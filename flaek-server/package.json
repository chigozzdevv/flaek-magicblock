{
  "name": "flaek-server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/server.ts",
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "node dist/server.js",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md,css,scss}\"",
    "retention:once": "ts-node-dev -r tsconfig-paths/register src/features/ingest/retention.cli.ts",
    "worker": "ts-node-dev -r tsconfig-paths/register src/features/jobs/worker.cli.ts"
  },
  "dependencies": {
    "@magicblock-labs/ephemeral-rollups-sdk": "^0.8.0",
    "@solana/web3.js": "^1.98.4",
    "@types/cors": "^2.8.19",
    "ajv": "^8.17.1",
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.61.0",
    "cloudinary": "^2.7.0",
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "form-data": "^4.0.0",
    "ioredis": "^5.8.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.1",
    "pino": "^10.0.0",
    "pino-http": "^11.0.0",
    "socket.io": "^4.8.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/csv-parse": "^1.1.12",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.7.0",
    "@types/pino": "^7.0.4",
    "@types/pino-http": "^5.8.4",
    "@types/socket.io": "^3.0.1",
    "prettier": "^3.6.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
